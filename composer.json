{
  "name": "drdplus/theurgist-formula-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of formulas for Drd+ theurgist",
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "drdplus/calculator-skeleton": "^1.1",
    "drdplus/tables": "^2.5"
  },
  "require-dev": {
    "composer/composer": "^1.8",
    "granam/exceptions-hierarchy": "^5.0",
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "^8.3",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/CalculatorSkeleton && ln -s ../../vendor/drdplus/calculator-skeleton/DrdPlus/Tests/CalculatorSkeleton DrdPlus/Tests/"
    ]
  }
}
